{
  "name": "extum/flarum-ext-old-title",
  "description": "Show the old title too if you change a discussion title.",
  "keywords": [
    "flarum"
  ],
  "type": "flarum-extension",
  "license": "MIT",
  "require": {
    "flarum/core": "^0.1.0-beta-7"
  },
  "authors": [
    {
      "name": "Arda Cebi",
      "email": "ardacebi1@gmail.com",
      "role": "Developer"
    }
  ],
  "autoload": {
    "psr-4": {
      "Extum\\OldTitle\\": "src/"
    }
  },
  "extra": {
    "flarum-extension": {
      "title": "Old Title",
      "icon": {
          "name": "fas fa-font",
           "backgroundColor": "#434ec1",
           "color": "#fff"
}
    },
    "flagrow": {
      "discuss": "https://discuss.flarum.org/d/14747-old-title-extension-by-extum"
    }
  }
}
